<?xml version="1.0"?>
<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find arm_moveit_config)/config/ros_controllers.yaml" command="load"/>

  <!-- Load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" ns="/arm_stand" output="screen" 
  args="--namespace=/arm_stand
    joint_state_controller
    hand_controller
    arm_controller
    --timeout 20"/>

</launch>
